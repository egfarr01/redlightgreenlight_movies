<%= form_for @movie do |f| %>
  <div class="movie">
    <%= f.label :title %>
    <%= f.text_field :title, placeholder: 'Title' %>

    <%= f.label :description %>
    <%= f.text_area :description, placeholder: 'Description' %>

    <%= f.label :image_url, "Image URL" %>
    <%= f.text_field :image_url, placeholder: 'Image URL' %>
  </div>

  <div id="additional_movies"></div>

  <%= f.submit %>
<% end %>

<%= select_tag 'num_movies', options_for_select((1..10).to_a) %>